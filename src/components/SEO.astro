import type { GetImageResult } from 'astro:assets';

// Define the properties the SEO component accepts.
interface Props {
  title: string;
  description: string;
  ogImage?: string | GetImageResult;
  canonicalURL?: URL | string;
  noindex?: boolean;
  nofollow?: boolean;
}

const { 
  title, 
  description, 
  ogImage,
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  noindex = false,
  nofollow = false
} = Astro.props;

// Define site-wide constants
const siteTitle = "Wimmer EDV | Ihr Gold-Zertifizierter IT-Partner in St. Pölten";
const fullTitle = `${title} | ${siteTitle}`;

// Construct the full Open Graph image URL
const imageSrc = (typeof ogImage === 'string' ? ogImage : ogImage?.src) ?? '/og-image-default.jpg';
const imageURL = new URL(imageSrc, Astro.site).toString();

// Construct robots tag content
const robotsContent = [
  noindex && 'noindex',
  nofollow && 'nofollow'
].filter(Boolean).join(', ');
---
<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Robots Meta Tag -->
{robotsContent && <meta name="robots" content={robotsContent} />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="Wimmer EDV GmbH" />
<meta property="og:locale" content="de_AT" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
